<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Img2txt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Override the colorPrimary attribute for night mode -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <!-- Optionally override other attributes for night mode -->
        <item name="android:windowBackground">@drawable/background_night</item>
        <item name="android:statusBarColor">@color/status_bar_color_night</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color_night</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
